---
export interface Props {
  code: string;
}
const {code} = Astro.props;
import shiki from 'shiki';
let formattedCode;
const highlighter = await shiki.getHighlighter({theme: 'nord'});
formattedCode = highlighter.codeToHtml(code, {lang: 'js'});

---

<pre class="astro-code" set:html={formattedCode}></pre>
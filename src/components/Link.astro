---
export interface Props {
  href: string;
  target?: string;
}

let { href, target = "_blank" } = Astro.props;
if (href[0] === "#") {
  // link is to header within page, remove _blank target
  target = "";
}
---

<a
  href={href}
  target={target}
  rel="noopener noreferrer"
  class="w-fit underline text-cyan-600 dark:text-cyan-300 hover:text-cyan-400 dark:hover:text-cyan-500 rounded-sm"
  ><slot />
</a>
